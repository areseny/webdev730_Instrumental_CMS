<table class="artists-grid">
  <% row_size = local_assigns[:row_size] || 3 %>
  <%= artists.in_groups_of(row_size, false) do |artists| %>
  <tr>
    <% artists.each_with_index do |artist, i| %>
      <%= content_tag :td, render(artist), class: ('last' if i == (row_size - 1)) %>
    <% end -%>
  </tr>
  <% end -%>
</table>
