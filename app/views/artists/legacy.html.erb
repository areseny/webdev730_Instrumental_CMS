<% cache [:artists_legacy_list, @artists.maximum(:updated_at)] do %>
<div class="block-title artists-legacy-title">
  <h1><%= t ".title" %></h1>
</div>
<div class="block artists-legacy-block">
  <table class="artists-grid artists-legacy-grid">
    <%= @artists.in_groups_of(4, false) do |artists| %>
    <tr>
      <% artists.each_with_index do |artist, i| %>
      <%= content_tag :td, render(artist), class: ('last' if i == 3) %>
      <% end -%>
    </tr>
    <% end -%>
  </table>
</div>
<% end %>
