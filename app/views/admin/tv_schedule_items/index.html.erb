<% @home_page_menu_active = true %>
<h1 class="page-header">Home Page - Programação SescTV</h1>
<div style="margin-bottom: 15px;">
  <%= link_to "Importar do Excel", import_admin_tv_schedule_items_path, class: "btn btn-primary" %>
  <%= link_to "Apagar todos os itens", clear_admin_tv_schedule_items_path,
              :method => :post, :class => 'btn btn-danger',
              :data => { :confirm => "Tem certeza que deseja apagar TODOS os itens abaixo?" } %>
</div>
<div class="panel panel-default">
  <div class="panel-heading">Programação do SescTV</div>
  <div class="panel-body">
    <div class="table-responsive">
      <table class="table table-striped table-bordered table-condensed table-hover" id="tv-schedule-items-table">
        <thead>
          <tr>
            <th>Data / hora</th>
            <th>Programa</th>
          </tr>
        </thead>
        <tbody>
        </tbody>
      </table>
    </div>
  </div>
</div>
<script>
jQuery(function($) {

  $("#tv-schedule-items-table").dataTable({
    "bProcessing": true,
    "bAutoWidth": false,
    "sAjaxSource": "/ueber/tv_schedule_items/datatable.json",
    "aoColumns": [
      { "iDataSort":  2, "sWidth": "150px" },
      { "bSortable": false },
      { "bVisible": false }
    ],
    "aaSorting": [[0,'desc']]
  });

});
</script>
