<% cache "schedule-items-datatable", skip_digest: true do %>
{
  "aaData": [
    <%= raw(@schedule_items.map do |item|
          date = link_to l(item.date, format: :brief), edit_admin_schedule_item_path(item)
          description =
            image_tag(item.artist.thumbnail, size: '72x72', class: 'artist-list-thumb') +
            item.description
          [date, item.artist.name, description, item.date.to_time.to_i].to_json
        end.join(',')) %>
  ]
}
<% end -%>
