<% @home_page_menu_active = true %>
<h1 class="page-header">Home Page - Agenda de Shows</h1>
<div style="margin-bottom: 15px;">
  <%= link_to fa_icon(:plus, "Adicionar item de agenda"), new_admin_schedule_item_path, :class => "btn btn-primary" %>
</div>
<div class="panel panel-default">
  <div class="panel-heading">Agenda atual</div>
  <div class="panel-body">
    <div class="alert alert-info">
      <i class="fa fa-info-circle"></i>
      Apenas os quatro shows mais próximos da data atual são exibidos na home page.
    </div>
    <div class="table-responsive">
      <table class="table table-striped table-bordered table-condensed table-hover" id="schedule-items-table">
        <thead>
          <tr>
            <th>Data</th>
            <th>Artista</th>
            <th>Descrição</th>
          </tr>
        </thead>
        <tbody>
        </tbody>
      </table>
    </div>
  </div>
</div>
<script>
jQuery(function($) {

  $("#schedule-items-table").dataTable({
    "bProcessing": true,
    "bAutoWidth": false,
    "sAjaxSource": "/ueber/schedule_items/datatable.json",
    "aoColumns": [
      { "iDataSort":  3, "sWidth": "150px" },
      { "sWidth": "200px" },
      { "bSortable": false },
      { "bVisible": false }
    ],
    "aaSorting": [[0,'desc']]
  });

});
</script>
