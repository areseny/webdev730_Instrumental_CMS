<legend>Evento: <%= @event.title %></legend>

<%= form_for @event.becomes(Event),
             :url => admin_event_path(@event),
             :html => { class: 'form-horizontal' } do |f| %>

  <%= f.horizontal_group :description, :text_area,
                         :placeholder => 'Descrição do evento em Markdown',
                         :rows => 8 %>

  <div class="form-group">
    <hr />
    <div class="col-sm-offset-2 col-sm-10">
      <%= link_to "Cancelar", admin_artist_path(@artist), class: 'btn btn-primary' %>
      <%= f.button class: 'btn btn-success' do %>
        <i class="glyphicon glyphicon-ok"></i> Atualizar
      <% end -%>
    </div>
  </div>

<% end -%>
