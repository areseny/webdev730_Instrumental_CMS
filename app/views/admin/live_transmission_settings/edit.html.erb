<h1 class="page-header">Transmissões ao Vivo (Configurações)</h1>
<div class="panel panel-default">
  <div class="panel-heading">Horário das transmissões</div>
  <div class="panel-body">

    <% if @settings.errors.any? %>
      <div class="alert alert-warning">
        <a href="#" class="close" data-dismiss="alert">×</a>
        <%= fa_icon 'warning-sign', "Por favor preencha todos os campos corretamente" %>
      </div>
    <% end -%>

    <%= form_for @settings, url: admin_live_transmission_settings_path, :method => :patch,
                 html: { class: 'form-horizontal', autocomplete: 'off' } do |f| %>

      <div class="form-group">
        <%= f.label :starts_at, :class => "col-sm-2 control-label" %>
        <div style="width: 280px;">
          <div class='input-group date live-transmission-time-edit'>
            <%= f.text_field :starts_at, :class => "form-control", :value => l(f.object.starts_at, :format => :time) %>
            <span class="input-group-addon"><span class="glyphicon glyphicon-time"></span></span>
          </div>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :ends_at, :class => "col-sm-2 control-label" %>
        <div style="width: 280px;">
          <div class='input-group date live-transmission-time-edit'>
            <%= f.text_field :ends_at, :class => "form-control", :value => l(f.object.ends_at, :format => :time) %>
            <span class="input-group-addon"><span class="glyphicon glyphicon-time"></span></span>
          </div>
        </div>
      </div>

      <div class="form-group">
        <hr />
        <div class="col-sm-offset-2 col-sm-10">
          <%= f.button type: 'submit', class: 'btn btn-success' do %>
            <%= fa_icon :save, "Salvar" %>
          <% end -%>
          <%= link_to admin_live_transmissions_path, class: 'btn btn-default' do %>
            <i class="glyphicon glyphicon-list"></i> Voltar à lista
          <% end -%>
        </div>
      </div>
    <% end -%>

  </div>
</div>
<script type="text/javascript">
  jQuery(function ($) {
    $('.live-transmission-time-edit').datetimepicker({
      pickDate: false
    });
  });
</script>
