<legend>Imagens do artista: <%= @artist.name %></legend>
<%= form_for [:admin, @artist], html: { class: 'form-horizontal' } do |f| %>

  <div class="form-group <%= 'has-error' if @artist.errors[:banner].any? %>">
    <%= f.label :banner, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.file_field :banner %><br />
      <% if @artist.banner? %>
      <%= image_tag @artist.banner.url, width: @artist.banner_width / 2, height: @artist.banner_height / 2, class: 'round' %>
      <% end -%>
    </div>
  </div>

  <div class="form-group <%= 'has-error' if @artist.errors[:thumbnail].any? %>">
    <%= f.label :thumbnail, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.file_field :thumbnail %><br />
      <% if @artist.thumbnail? %>
      <%= image_tag @artist.thumbnail.url, size: '200x200', class: 'round' %>
      <% end -%>
    </div>
  </div>

  <div class="form-group">
    <hr />
    <div class="col-sm-offset-2 col-sm-10">
      <%= link_to "Cancelar", admin_artist_path(@artist), class: 'btn btn-primary' %>
      <%= f.button class: 'btn btn-success' do %>
        <i class="glyphicon glyphicon-ok"></i> Atualizar
      <% end -%>
    </div>
  </div>


<% end -%>
