<table class="table table-striped table-condensed table-hover">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Datas</th>
    </tr>
  </thead>
  <tbody>
    <% @artists.each do |artist| %>
    <tr>
      <td>
        <%= image_tag(artist.thumbnail, size: '32x32', class: 'artist-list-thumb') %>
        <%= link_to artist.name, edit_admin_artist_path(artist) %>
      </td>
      <td>
        <%= artist.dates.map{ |d| l(d, format: :brief) }.to_sentence %>
      </td>
    </tr>
    <% end -%>
  </tbody>
</table>
<%= bootstrap_pager @artists %>
